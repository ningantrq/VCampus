<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" stylesheets="@../../css/ClientCss.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vcampus.controller.store.goodAddController">
    <children>
        <VBox prefHeight="600.0" prefWidth="900.0">
            <children>
                <HBox alignment="CENTER" prefHeight="286.0" prefWidth="1280.0">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text" text="添加/修改商品信息">
                            <font>
                                <Font size="41.0" />
                            </font>
                        </Text>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="286.0" prefWidth="1280.0">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text" text="商品id">
                            <font>
                                <Font size="29.0" />
                            </font>
                        </Text>
                        <HBox alignment="CENTER" prefHeight="120.0" prefWidth="68.0" />
                        <TextField fx:id="id" prefHeight="52.0" prefWidth="475.0">
                            <font>
                                <Font size="25.0" />
                            </font>
                  </TextField>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="286.0" prefWidth="1280.0">
                    <children>
                        <HBox alignment="CENTER" prefHeight="286.0" prefWidth="1280.0">
                            <children>
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text" text="商品名">
                                    <font>
                                        <Font size="29.0" />
                                    </font>
                                </Text>
                                <HBox alignment="CENTER" prefHeight="120.0" prefWidth="41.0" />
                        <TextField fx:id="name" prefHeight="50.0" prefWidth="277.0">
                           <font>
                              <Font size="25.0" />
                           </font>
                        </TextField>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="286.0" prefWidth="1280.0">
                            <children>
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text" text="价格">
                                    <font>
                                        <Font size="29.0" />
                                    </font>
                                </Text>
                                <HBox alignment="CENTER" prefHeight="120.0" prefWidth="43.0" />
                                <TextField fx:id="price" prefHeight="51.0" prefWidth="298.0">
                                    <font>
                                        <Font size="25.0" />
                                    </font></TextField>
                            </children>
                        </HBox>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="286.0" prefWidth="1280.0">
                    <children>
                        <HBox alignment="CENTER" prefHeight="286.0" prefWidth="1280.0">
                            <children>
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text" text="商品类型">
                                    <font>
                                        <Font size="29.0" />
                                    </font>
                                </Text>
                                <HBox alignment="CENTER" prefHeight="120.0" prefWidth="35.0" />
                                <TextField fx:id="category" prefHeight="50.0" prefWidth="264.0">
                                    <font>
                                        <Font size="25.0" />
                                    </font></TextField>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="286.0" prefWidth="1280.0">
                            <children>
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text" text="商品库存">
                                    <font>
                                        <Font size="29.0" />
                                    </font>
                                </Text>
                                <HBox alignment="CENTER" prefHeight="120.0" prefWidth="41.0" />
                                <TextField fx:id="stock" prefHeight="51.0" prefWidth="218.0">
                                    <font>
                                        <Font size="25.0" />
                                    </font></TextField>
                            </children>
                        </HBox>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="286.0" prefWidth="1280.0">
                    <children>
                        <Button fx:id="goback" mnemonicParsing="false" onMouseClicked="#EnterGoodMenu" prefHeight="51.0" prefWidth="156.0" text="退出">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Button>
                        <HBox prefHeight="120.0" prefWidth="139.0" />
                        <Button fx:id="ok" mnemonicParsing="false" onMouseClicked="#AddOrModify" prefHeight="51.0" prefWidth="156.0" text="确认">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
